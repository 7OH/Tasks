Процедура Аська_ПользовательПриСозданииНаСервере(Форма, Отказ, СтандартнаяОбработка)
	Элементы = Форма.Элементы;
	
	ГруппаНастроек = Элементы.узСтраницаНастройкиПодсистемыУправлениеЗадачами;
		
	// Вставить содержимое метода.
	// + SZ Настройка аськи
	// Настройки аськи
	ГруппаАська = Элементы.Добавить("узГруппаНастройкаАськи", Тип("ГруппаФормы"), ГруппаНастроек);
	ГруппаАська.Вид = ВидГруппыФормы.ОбычнаяГруппа;
	ГруппаАська.Отображение = ОтображениеОбычнойГруппы.СлабоеВыделение;
	ГруппаАська.Группировка = ГруппировкаПодчиненныхЭлементовФормы.Вертикальная;
	ГруппаАська.Заголовок = НСтр("ru = 'Настройка Аськи'");
	
	ПолеФлажка = Элементы.Добавить("szПолучатьРассылкуПоАське", Тип("ПолеФормы"), ГруппаАська);
	ПолеФлажка.ПутьКДанным = "Объект.szПолучатьРассылкуПоАське";
	ПолеФлажка.Вид = ВидПоляФормы.ПолеФлажка;
	ПолеФлажка.ПоложениеЗаголовка = ПоложениеЗаголовкаЭлементаФормы.Право;
	ПолеФлажка.ВидФлажка = ВидФлажка.Тумблер;
	ПолеФлажка.ФорматРедактирования = НСтр("ru = 'БЛ=Нет; БИ=Да'");
	
	ПолеВвода = Элементы.Добавить("szНомерАськи", Тип("ПолеФормы"), ГруппаАська);
	ПолеВвода.ПутьКДанным = "Объект.szНомерАськи";
	ПолеВвода.Вид = ВидПоляФормы.ПолеВвода;
