Функция szПолучитьКонстанту(Имя,ЗначениеПоУмолчанию) Экспорт 
	
	Спр = Справочники.узКонстанты; 
	Элем = Спр.НайтиПоНаименованию(Имя);
	Если Элем.Пустая() Тогда
		Элем = Спр.СоздатьЭлемент();
		Элем.Наименование = Имя;
		Элем.Значение = ЗначениеПоУмолчанию;
		Элем.Записать();
	КонецЕсли;	

	Возврат Элем.Значение;
	
